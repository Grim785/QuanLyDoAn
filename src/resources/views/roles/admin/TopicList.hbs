<div class="container my-2 table-container">
  {{!-- <div class="table-responsive"> --}}
    <table class="table table-hover table-striped align-middle">
      <thead class="table-primary">
        <tr>
          <th class="">ID</th>
          <th class="">Title</th>
          <th class="">Description</th>
          <th class="">Start Date</th>
          <th class="">End Date</th>
          <th class="">Status</th>
          <th class="">Participants</th>
          <th class="">Actions</th>
                    <th class="">Status</th>
          <th class="">Participants</th>
          <th class="">Actions</th>
        </tr>
      </thead>
      <tbody>
        <!-- Dòng mẫu hiển thị dữ liệu -->
        {{#each list}}
        <tr>
          <td>{{id}}</td>
          <td><input type="text" class="form-control form-control-xs cell-input" value="{{this.title}}" /></td>
          <td><textarea class="form-control form-control-xs cell-input" rows="1">{{description}}</textarea></td>
          <td><input type="date" class="form-control form-control-xs cell-input" value="{{start_date}}" /></td>
          <td><input type="date" class="form-control form-control-xs cell-input" value="{{end_date}}" /></td>
          <td>
            <select class="form-select form-select-xs cell-input">
              <option value="not_started" {{#ifCond status 'not_started'}}selected{{/ifCond}}>Not Started</option>
              <option value="in_progress" {{#ifCond status 'in_progress'}}selected{{/ifCond}}>In Progress</option>
              <option value="completed" {{#ifCond status 'completed'}}selected{{/ifCond}}>Completed</option>
            </select>
          </td>
          <td>
            <div class="participants-list">
              <span>Student A</span>, <span>Student B</span>
              <button class="btn btn-link p-0" title="Edit Participants"><i class="bi bi-pencil-square"></i></button>
            </div>
          </td>
          <td>
            <button class="btn btn-link p-0" title="Save"><i class="bi bi-check-circle text-success"></i></button>
            <button class="btn btn-link p-0" title="Delete"><i class="bi bi-x-circle text-danger"></i></button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{!-- </div> --}}
</div>

<style>
  .table-container {
    height: 70vh;
    width: 165vh;
    overflow-y: auto;
    overflow-x: auto;
  }

  .table th, .table td {
    text-align: center;
    padding: 0 5px 0 5px;
    font-size: 0.7rem;
    white-space: nowrap;
  }

  .form-control-xs, .form-select-xs {
    font-size: 0.7rem;
    line-height: 1;
    border: none;
    width: 100%;
    height: 100%;
  }

  .cell-input {
    margin: 0;
    padding: 0.3rem;
    box-sizing: border-box;
    background-color: transparent;
    width: 200px;
  }

  .cell-input:focus {
    outline: none;
    box-shadow: inset 0 0 0 1px #007bff;
  }

  .btn-link {
    text-decoration: none;
  }

  .col-width-5 {
    width: 50px;
  }
  .col-width-10 {
    width: 100px;
  }
  .col-width-15 {
    width: 150px;
  }
  .col-width-20 {
    width: 200px;
  }

  .col-width-25 {
    width: 250px;
  }
  .participants-list {
    text-align: left;
    font-size: 0.7rem;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .participants-list button {
    font-size: 0.8rem;
    line-height: 1;
    padding: 0;
  }
</style>

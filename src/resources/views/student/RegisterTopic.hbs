<div class="container register" style="height: 75%;">
    <div class="row">
        <div class="col-12 d-flex align-items-center border-bottom" style="height: 50px;">
            <p>Trang chủ | Đăng kí đề tài</p>
        </div>
        <div class="col-12 mt-2">
            <p>Điền thông tin đăng kí đề tài:</p>
        </div>
        <div class="col-12 mt-3">
            <form action="">
                <div class="container">
                    <fieldset class="row border rounded-3 p-3 g-2">
                        <legend class="float-none w-auto m-0 px-3" >Thông tin sinh viên</legend>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-2">
                                        <label for="name">Lớp: </label>
                                    </div>
                                    <div class="col-10">
                                        <input class="w-100" type="text" id="name" name="name" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-3">
                                        <label for="">Chuyên nghành: </label>
                                    </div>
                                    <div class="col-9">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-2">
                                        <label for="name">Email: </label>
                                    </div>
                                    <div class="col-10">
                                        <input class="w-100" type="email" id="" name="" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-3">
                                        <label for="name">Số điện thoại: </label>
                                    </div>
                                    <div class="col-9">
                                        <input class="w-100" type="number" id="" name="" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="row border rounded-3 p-3 g-2 mt-3">
                        <legend class="float-none w-auto m-0 px-3" >Lựa chọn đề tài</legend>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-2">
                                        <label for="name">Đề xuất: </label>
                                    </div>
                                    <div class="col-10">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-3">
                                        <label for="">Tự chọn: </label>
                                    </div>
                                    <div class="col-9">
                                        <input class="w-100" type="text" id="name" name="name" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="row border rounded-3 p-3 g-2 mt-3">
                        <legend class="float-none w-auto m-0 px-3" >Thông tin đề tài</legend>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-2">
                                        <label for="name">Tên đề tài: </label>
                                    </div>
                                    <div class="col-10">
                                        <input class="w-100" type="text" id="name" name="name" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-3">
                                        <label for="">Người hướng dẫn: </label>
                                    </div>
                                    <div class="col-9">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 d-flex align-items-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-1">
                                        <label for="">Mô tả: </label>
                                    </div>
                                    <div class="col-11">
                                        <textarea class="w-100" style="height: 200px;" name="" id=""></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="row my-3">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-secondary text-capitalize">Đăng kí</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>